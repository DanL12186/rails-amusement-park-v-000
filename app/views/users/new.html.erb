<h2>Welcome, new user!</h2>

<br>

<%= form_for @user do |f| %>
  <h5><%= f.label :name %></h5>
  <%= f.text_field :name %>
  <br>
  <h5><%= f.label :height_in_inches %></h5>
  <%= f.text_field :height %>
  <br>
  <h5><%= f.label :happiness_rating %> (1-5) </h5>
  <%= f.text_field :happiness %>
  <br>
  <h5><%= f.label :nausea_rating %> (1-5) </h5>
  <%= f.text_field :nausea %>
  <br>
  <h5><%= f.label :number_of_tickets %></h5>
  <%= f.text_field :tickets %>
  <br>
  <h5> <%= f.label :password %> </h5>
  <h5> <%= f.text_field :password %> </h5>

  <%= f.label :admin? %>
  <%= f.check_box :admin %>
 <br>
  <%= f.submit "Create User" %>
<% end %>
